
surface glass(float ior = 1.5)
{
	float from_ior, to_ior;

	if (backfacing())
	{
		from_ior = ior;
		to_ior = 1.0;
	}
	else
	{
		from_ior = 1.0;
		to_ior = ior;
	}

	float Kr,Kt;
 	fresnel(I, N, from_ior / to_ior, Kr ,Kt);
 	Ci = color(1, 0, 0) * Kr * reflection(N) + 
 		 color(0, 0, 1) * Kt * refraction(N, from_ior, to_ior);
}
